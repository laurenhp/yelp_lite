<!-- Validation failure messages -->
<% if @restaurantdetail.errors.any? %>
  <% @restaurantdetail.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurantdetail #<%= @restaurantdetail.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurantdetail/<%= @restaurantdetail.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @restaurantdetail.description %></textarea>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <textarea id="address" name="address" placeholder="Address" class="form-control" rows="3"><%= @restaurantdetail.address %></textarea>
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @restaurantdetail.website %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <%= cl_image_tag(@restaurantdetail.photo.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="photo" name="photo" class="form-control">
      </div>

      <!-- Label and input for review_id -->
      <div class="form-group">
        <label for="review_id" class="control-label">
          Review
        </label>

        <%= select_tag(:review_id, options_from_collection_for_select(Review.all, :id, :user_id, @restaurantdetail.review_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Restaurantdetail
      </button>
      or
      <a href="/restaurantdetails/<%= @restaurantdetail.id %>">Cancel</a>
    </form>
  </div>
</div>
